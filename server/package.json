{
  "_moduleAliases": {
    "@app": "./dist"
  },
  "author": "alan-hadyk <alan.hadyk@gmail.com>",
  "description": "Server for Side-Stacker game",
  "dependencies": {
    "express": "^4.18.2",
    "slonik": "^34.0.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "module-alias": "^2.2.3",
    "prettier": "^3.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.6.0"
  },
  "license": "MIT",
  "main": "index.js",
  "name": "server",
  "private": true,
  "repository": "git@github.com:alan-hadyk/side-stacker-game.git",
  "scripts": {
    "build": "rm -rf dist/ && tsc -p ./tsconfig.build.json",
    "db:start": "docker-compose up db -d",
    "db:stop": "docker-compose down",
    "dev": "NODE_ENV=development npm run db:start && ts-node-dev -r tsconfig-paths/register --project tsconfig.json src/index.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "start": "NODE_ENV=production node -r module-alias/register dist/index.js"
  },
  "version": "1.0.0"
}
